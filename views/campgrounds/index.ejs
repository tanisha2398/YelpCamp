<% include ../partial/header %>

<h4><%=currentUser%></h4>

<div class="container">
    <header class="jumbotron">
        <div class="container">
        <h1>Welcome to YelpCamp!!</h1>
        <p>View our hand-picked campground from all over the world</p>
        <p>
            <a class="btn btn-primary btn-lrg" href="campground/new">Add New Campground</a>        
        </p>
        </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
    <% campground.forEach(function(campground){%>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%=campground.image%>">
                <div class="caption">
                    <h3><%=campground.name%></h3>
                </div>
                <p>
                    <a href="/campground/<%=campground._id%>" class="btn btn-primary">More Info</a>
                </p>
            </div>
        </div>
    <% });%>
    </div>
    
</div>
<% include ../partial/footer %>