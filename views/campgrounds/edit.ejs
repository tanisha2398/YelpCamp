<% include ../partial/header %>
<div class="container">
    <div class="row">
         <h1 style="text-align:center;">Edit <%= campground.name%></h1>
        <div style="width: 30%;margin:25px auto;">
           
            <form action="/campground/<%= campground._id%>/edit?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= campground.name%>" name="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= campground.image%>" name="image">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= campground.description%>" name="description">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block">Submit</button>
                </div>        
            </form>
            <a href="/campground">Back</a>
        </div>   
            
    </div>
</div>
<% include ../partial/footer %>